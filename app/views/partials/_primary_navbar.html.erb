        <div class="text-2xl mt-4">
          <p><%= current_user.name %></p>
        </div>
      </div>
    </div>
    <% end %>

    <ul class="flex flex-col space-y-5 text-gray-300">
      <li class="flex items-center h-auto space-x-5">
