<div class="bg-gray-200 h-auto">
  <div class="fixed top-0 z-20 w-full">
    <div class="bg-primary-blue h-auto py-5">
      <div class="flex items-center justify-between text-white px-4">
        <button>
          <%# <%= link_to "<-", root_path %>
          <%= image_tag "hamburger-menu.svg", alt: "group-photo", class: "h-5" %>
        </button>
        <p class="w-full text-center">Category</p>
        <button class="cursor-pointer bg-red-200">
          <%= button_to destroy_user_session_path, method: :delete do %>
            <%= image_tag "exit-sign.svg", alt: "group-photo", class: "h-5" %>
          <% end %>
        </button>
      </div>
      <div class="flex items-center justify-center mt-5 space-x-5 text-white">
        <a class="cursor-pointer">
          <%= link_to 'View transactions', transactions_path %>
        </a>
      </div>
    </div>
    <div class="shadow-xl h-14 flex items-center justify-between px-4 bg-white">
      <p class="text-gray-500">Hello, <%= current_user.name%></p>
      <p class="text-gray-700 font-semibold"></p>
    </div>
  </div>

  <div class="h-auto z-10 pt-44 pb-32">
    <%= render partial: "partials/notices" %>

    <% @groups.each do |group| %>
      <div class="py-2 px-3">
        <%= link_to single_group_path(group) do %>
          <div class="bg-white flex items-center rounded h-auto p-2 space-x-3 shadow-md">
            <div class="h-16 w-16">
              <% if group.icon.attached? %>
                <%= image_tag group.icon, alt: "group-photo" %>
              <% end %>
            </div>
            <div class="flex flex-col justify-between h-14 w-full">
              <div class="flex justify-between text-sm">
                <p class="text-gray-500"><%= group.name %></p>
                <p class="text-gray-700 font-semibold right-0">$<%= group.entities.sum(:amount) || 0 %></p>
              </div>
              <div>
                <p class="text-gray-500 text-sm">
                  <%= group.created_at.strftime("%e %b, %Y") %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="bg-primary-green h-24 flex items-center justify-center p-4 fixed bottom-0 z-20 w-full">
  <%= link_to group_new_path do %>
    <div class="border border-2 border-white w-full h-16 text-white flex items-center justify-center rounded-md px-16">
      <p>ADD NEW CATEGORY</p>
    </div>
  <% end %>
</div>