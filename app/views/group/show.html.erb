<div class="bg-gray-200">
  <div class="fixed top-0 z-20 w-full">
    <div class="bg-primary-blue h-auto py-5">
      <div class="flex items-center justify-between text-white px-4">
        <button>
          <%= link_to "<-", group_path %>
        </button>
        <p>Detail</p>
        <p class="invisible">hidden</p>
      </div>
      <div class="flex items-center justify-center mt-5 space-x-5 text-white">
        <a class="cursor-pointer">
          <%= button_to 'Log out', destroy_user_session_path, method: :delete %>
        </a>
      </div>
    </div>
  </div>

  <div class="h-auto z-10 pt-28 pb-36">
    <div class="py-2 px-3">
      <div class="bg-white rounded h-auto p-2 space-x-3 shadow-md">
        <div class="flex mb-2">
          <div class="h-16 w-16">
            <% if @group.icon.attached? %>
              <%= image_tag @group.icon, alt: "group-photo" %>
            <% end %>
          </div>
          <div class="flex flex-col justify-between ml-5">
            <p class="text-gray-500 mb-2"><%= @group.name %></p>
            <div class="flex space-x-8">
              <span class="bg-gray-100 p-2 rounded-full">
                <%= link_to update_group_path(@group) do %>
                  <%= image_tag "edit-file.svg", alt: "edit-icon", class: "h-6" %>
                <% end %>
              </span>
              <span class="bg-gray-100 p-2 rounded-full" id="btn-open-popup">
                  <%= image_tag "trash-bin.svg", alt: "trash-icon", class: "h-6" %>

                <%# <%= link_to delete_group_path(@group), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <%# <%= image_tag "trash-bin.svg", alt: "trash-icon", class: "h-6" %>
                <%# <% end %>
              </span>
            </div>
          </div>
        </div>
        
        <%# list of transactions for a single group %>
        <% @group.entities.order('created_at desc').each do |transaction| %>
          <div class="text-gray-500 text-sm mt-4 border-t">
            <div class="my-3 py-1">
              <div class="flex justify-between py-3">
                <p class="font-semibold pb-2">
                  <%= transaction.name %>
                </p>
                <div class="flex space-x-6">
                <span class="bg-gray-100 p-2 rounded-full">
                  <%= link_to update_transaction_path(transaction) do %>
                    <%= image_tag "edit-file.svg", alt: "edit-icon", class: "h-5" %>
                  <% end %>
                  </span>
                <span class="bg-gray-100 p-2 rounded-full">
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <%= image_tag "trash-bin.svg", alt: "trash-icon", class: "h-5" %>
                  <% end %>
                </span>
                </div>
              </div>
              <div class="flex justify-between">
                <p>
                  <%= transaction.created_at.strftime("%e %b, %Y at %H:%M") %>
                </p>
                <p>$ <%= transaction.amount %></p>
              </div>
            </div>
          </div>
        <% end %>

        <div class="flex justify-between items-center py-2 border-t">
          <% if @group.entities.exists? %>
            <p class="text-gray-500">TOTAL PAYMENT</p>
            <p class="font-semibold">$<%= @group.entities.sum(:amount) %></p>
          <% else %>
            <p class="text-center font-semibold pb-2">No transactions available</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="bg-primary-green h-24 flex items-center justify-center p-4 fixed bottom-0 z-20 w-full">
  <%= link_to transactions_new_path do %>
    <% session[:is_transaction_triggered_from_detail] = "/group/:id/transactions", session[:group_id] = @group.id %>
    <div class="border border-2 border-white w-full h-16 text-white flex items-center justify-center rounded-md px-16">
      <p>ADD TRANSACTION</p>
    </div>
  <% end %>
</div>


<!-- Popup modal -->
<div class="fixed z-40 inset-0 overflow-y-auto popup-modal hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="flex items-end justify-center min-h-screen -mt-16 pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>

    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

    <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
      <div class="sm:flex sm:items-start">
        <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
          <!-- Heroicon name: outline/exclamation -->
          <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
          <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">Delete Category</h3>
          <div class="mt-2">
            <p class="text-sm text-gray-500">Are you sure you want to delete this category? All it data will be permanently removed from our servers forever. This action cannot be undone.</p>
          </div>
        </div>
      </div>
      <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
        <button type="button" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">Delete</button>
        <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:w-auto sm:text-sm" id="btn-close-popup">Cancel</button>
      </div>
    </div>
  </div>
</div>